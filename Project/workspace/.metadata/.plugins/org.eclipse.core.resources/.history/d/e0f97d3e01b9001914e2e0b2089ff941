import java.util.Scanner;

public class Main {
	
	public static void Samosa() {
		
		System.out.println("Price = Rs 10");
		Scanner scan=new Scanner(System.in);
		System.out.println("How many Samosas do you want?");
		int qty = scan.nextInt();
		System.out.println("Updated Price :"+ (qty*10));
	}
	
	public static void BreadPakora() {
		
		System.out.println("\t\tPrice = Rs 15");
		Scanner scan=new Scanner(System.in);
		System.out.println("\n\t\tHow many Bread Pakora do you want?");
		int qty = scan.nextInt();
		System.out.println("\n\t\tUpdated Price :"+ (qty*15));
	}
	
	
	public static void main(String[] args) {
		
		Main m=new Main();
		
	
		System.out.println("\t\t******MENU******");
		System.out.println("\t\t1. Snacks");
		System.out.println("\t\t2. Lunch");
		System.out.println("\t\t3. Tea");
		System.out.println("\t\t4. Coffee");
		System.out.println("\t\t5. Juices");
		System.out.println("\n\n\t\tPlease Select One.");
		Scanner s = new Scanner(System.in);
		int choice = s.nextInt();
		
		switch(choice) {
		
		case 1:
			System.out.println("\t\tWe offer these Types of Snacks.\n Please Select your Choice.");
			System.out.println("\n\t\t1. Samosa");
			System.out.println("\n\t\t2. Bread Pakora");
			System.out.println("\n\t\t3. Kachori");
			int ch = s.nextInt();
			
			switch(ch) {
			
			case 1: 
				Samosa();
			}
		}
		
		

		
			
		
		
		
	}

}
