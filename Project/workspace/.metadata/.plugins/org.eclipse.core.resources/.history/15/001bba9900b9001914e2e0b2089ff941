import java.util.Scanner;

public class Main {
	
	public static void Samosa() {
		
		System.out.println("Price = Rs 10");
		Scanner scan=new Scanner(System.in);
		System.out.println("How many Samosas do you want?");
		int qty = scan.nextInt();
		System.out.println("Updated Price :"+ (qty*10));
	}
	
	
	public static void main(String[] args) {
		
		Main m=new Main();
		
	
		System.out.println("\t\t******MENU******");
		System.out.println("\t\t1. Snacks");
		System.out.println("\t\t2. Lunch");
		System.out.println("\t\t3. Tea");
		System.out.println("\t\t4. Coffee");
		System.out.println("\t\t5. Juices");

		Scanner s = new Scanner(System.in);
		int choice = s.nextInt();
		
		switch(choice) {
		
		case 1:
			System.out.println("1. Samosa");
			System.out.println("2. Bread Pakora");
			System.out.println("3. Kachori");
			int ch = s.nextInt();
			
			switch(ch) {
			
			case 1: Samosa();
			}
		}
		
		

		
			
		
		
		
	}

}
